 				<!-- <field name="cancelado" invisible="0" icon="terp-open"/> -->                
<!--               	<button name="%(action_tres_cartera_cobro_form_view_from_estado_cuenta)d" string="Efectuar Pago" type="action" icon="gtk-yes" context="{'partner_id':partner_id}"/> -->
